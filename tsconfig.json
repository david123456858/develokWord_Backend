{
  "compilerOptions": {
    "target": "es2015",                                 
    "experimentalDecorators": true,                  
    "module": "CommonJS",                                                     
    "outDir": "src/build",                                   
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true, 
    "strictPropertyInitialization": false,                      
    "skipLibCheck": true                                 
  }
}
